{
    "redhat.telemetry.enabled": false,
    "terminal.integrated.fontSize": 17,
    "workbench.colorTheme": "Visual Studio Dark",
    "window.zoomLevel": -1,
    "code-runner.runInTerminal": true,

    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": "variable",
                "settings": {
                    "foreground": "#99D9F2"
                }
            },
            {
                "scope": "entity.name.function",
                "settings": {
                    "foreground": "#D9D6A9"
                }
            },
            {
                "scope": "meta.method-call",
                "settings": {
                    "foreground": "#58df89"
                }
            },
            {
                "scope": "variable.other.property",
                "settings": {
                    "foreground": "#99D9F2"
                }
            },
            {
                "scope": "variable.other.readwrite",
                "settings": {
                    "foreground": "#99D9F2"
                }
            },
            {
                "scope": "support.type",
                "settings": {
                    "foreground": "#58df89"
                }
            },
            {
                "scope": "entity.name",
                "settings": {
                    "foreground": "#99d9f2"
                }
            },
            {
                "scope": "entity.name.type",
                "settings": {
                    "foreground": "#58df89"
                }
            },
            {
                "scope": "support.function",
                "settings": {
                    "foreground": "#D9D6A9"
                }
            },
            {
                "scope": "keyword.operator",
                "settings": {
                    "foreground": "#D9D6A9"
                }
            },
            {
                "scope": "keyword",
                "settings": {
                    "foreground": "#4f9ddd"
                }
            }
        ]
    },

    "hediet.vscode-drawio.resizeImages": null,
    "chatgpt.lang": "en",

    "C_Cpp.clang_format_fallbackStyle": "{'BasedOnStyle': 'Google','BreakBeforeBraces': 'Allman','IndentWidth': 4,'IndentCaseLabels': true,'AlignAfterOpenBracket': 'DontAlign','BraceWrapping': { 'SplitEmptyFunction': false },'BinPackParameters': false,'BinPackArguments': false,'IndentAccessModifiers': false,'AccessModifierOffset': -4,'ConstructorInitializerIndentWidth': 4,'ContinuationIndentWidth': 4,'BreakConstructorInitializers': 'AfterColon','PointerAlignment': 'Left','BreakBeforeTernaryOperators': true,'BreakBeforeBinaryOperators': 'All','AlignOperands': 'DontAlign','AllowShortIfStatementsOnASingleLine': 'AllIfsAndElse','AllowShortFunctionsOnASingleLine': 'Empty','AlignTrailingComments': { 'Kind': 'Never' },'NamespaceIndentation': 'All'}",
    "editor.wordWrap": "on",
    "editor.wrappingIndent": "indent",
    "java.format.settings.url": "D:\\university-academic-archive\\java-format-settings.xml",
    "workbench.iconTheme": "material-icon-theme",
    "editor.linkedEditing": true,

    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[xml]": {
        "editor.defaultFormatter": "mikeburgh.xml-format"
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[handlebars]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[scss]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[yml]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },

    "prettier.singleQuote": true,
    "editor.quickSuggestions": {
        "strings": "on"
    },
    "prettier.tabWidth": 4,
    "editor.formatOnSave": true,
    "html.format.wrapLineLength": 120,
    "github.copilot.editor.enableAutoCompletions": true,
    "prettier.printWidth": 120,
    "editor.fontSize": 17,
    "editor.fontFamily": "consolas, monospace",
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "security.allowedUNCHosts": ["wsl.localhost"]
}
